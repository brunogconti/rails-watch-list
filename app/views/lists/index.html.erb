<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://source.unsplash.com/evlkOfkQ5rE);">
  <div class="container ">
    <h1><strong>Save Any kind of movies</strong></h1>
    <p>Classic.</p>
  </div>
</div>

<div class="container m-5">
  <div class="row justify-content-between">
    <div class="col-4">
      <h2>My List</h2>
    </div>
    <div class="col-4">
      <%= link_to 'Create a movie list', new_list_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row d-flex">
    <% @lists.each do |list| %>
      <div class="col-3">
        <div class="card border bg-dark text-white" >
          <%= link_to list.name, list_path(list), class: "card-category", style: "background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(#{list.url})" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
